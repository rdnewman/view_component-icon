# As a gem, ignore Gemfile installation
/Gemfile.lock

# Ignore bundler config.
/.bundle

# Ignore all environment files (except templates).
/.env*
!/.env*.erb

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases).
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

/public/assets

# Ignore master key for decrypting credentials and more.
/config/master.key

# Ignore yardoc documentation
/doc/*
/.yardoc/*
/_yardoc/*

# Ignore simplecov code coverage
/coverage/*

# Ignore any local archives
**/.archive/*

# Ignore builds and node modules
/app/assets/builds/*
!/app/assets/builds/.keep
/node_modules
/pkg/

# Ignore any RSpec reports
/spec/reports/

# As a gem, ignore local tool artifacts
/.tool-versions
/.ruby-lsp

# As a gem, ignore any temporary built gem version
# @note for retaining released ones, use /gemfiles
/view_component-icon-?.?.?.gem

# Do the same ignores for the RSpec dummy app
# /spec/ersatz/Gemfile.lock  <- we're keeping this to keep the test app normalized
/spec/ersatz/.bundle
/spec/ersatz/.env*
!/spec/ersatz/.env*.erb
/spec/ersatz/log/*
/spec/ersatz/tmp/*
!/spec/ersatz/log/.keep
!/spec/ersatz/tmp/.keep
/spec/ersatz/tmp/pids/*
!/spec/ersatz/tmp/pids/
!/spec/ersatz/tmp/pids/.keep
/spec/ersatz/storage/*
!/spec/ersatz/storage/.keep
/spec/ersatz/tmp/storage/*
!/spec/ersatz/tmp/storage/
!/spec/ersatz/tmp/storage/.keep
/spec/ersatz/public/assets
/spec/ersatz/config/master.key
/spec/ersatz/doc/*
/spec/ersatz/.yardoc/*
/spec/ersatz/_yardoc/*
/spec/ersatz/coverage/*
/spec/ersatz/app/assets/builds/*
!/spec/ersatz/app/assets/builds/.keep
/spec/ersatz/node_modules
/spec/ersatz/pkg/
/spec/ersatz/.tool-versions
/spec/ersatz/.ruby-lsp
